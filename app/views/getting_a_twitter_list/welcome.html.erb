<section id="home" data-stellar-background-ratio="0.5">
    <div class="parallax-overlay"></div> 
    <div class="home-content text-center">
        <!-- <div class="parallax-overlay"></div>  -->
        <div>
            <!-- <h1 class=" slide-logo">Codeon</h1> -->
            <div class="main-flex-slider">
                <ul class="slides">
                    <li>
                        <h1>Welcome to Adjust-A-List!</h1>
                        <h3> Adjust-A-List allows you to search for, modify, and create a new Twitter list based off a user's pre-existing list </h3>
                    </li>
                </ul>
            </div> 
            <h2 class="slide-btm-text">Please select a list from a Twitter user</h2>
            <div class="home-arrow-down text-center">
                <%= form_tag("/search", method: "get") do %>
                <%= label_tag(:name, "Enter a user's Twitter handle: @", class: "custom-label") %>
                <%= text_field_tag(:name, nil, class: "custom-search") %>
                <%= submit_tag("Search") %>
                <% end %>      
            </div>
        </div>
    </div>
</section