<div class = "search-results">

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:name, "Find another Twitter user: @") %>
  <%= text_field_tag(:name,) %>
  <%= submit_tag("Search") %>
<% end %>

<div class = "format-results">

  <ol>
    <h4><%= "#{@name}'s Twitter Lists" %> </h4>
  <% @subscriptions.each do |twitter_list| %>
  <li>
   <blockquote>
      <%= link_to twitter_list.name, list_members_path(twitter_list.id)%> 
      </blockquote>
    </li>
  <% end %>


  <% @owned_lists.each do |twitter_list| %>
    <li>
      <blockquote>
      <%= link_to twitter_list.name, list_members_path(twitter_list.id)%>
      </blockquote>
    </li>
  <% end %>
  </ol>
</div>
</div>

  

<br>
